extends header.jade
block content
    h1.centering.maintitle=title
    div.paragraphe_large
        button#buttonnew Nouveau
        br
       ul#list(data-role='listview', data-inset='true', data-theme='a',data-filter='true', data-filter-placeholder='Rechercher un article...',)
            each val, index in foundarticle
                li
                    a(href='/admin?n='+ foundarticle[index].name)= foundarticle[index].title
                        p.ui-li-aside= foundarticle[index].category