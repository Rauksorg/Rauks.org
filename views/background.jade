extends header.jade
block content
    h1.centering.maintitle=title
    .paragraphe_large
    .paragraphe    
        ul(data-role='listview', data-inset='true', data-divider-theme='a',data-theme='f')
            each val, index in foundarticle
                li
                    a(href='/material?n='+ foundarticle[index].name)
                        h3= foundarticle[index].title
                        p=foundarticle[index].descript
                        p.ui-li-aside= foundarticle[index].category