html(lang="fr")
    head
        title=pagetitle
        meta(charset="utf-8")
        meta(name="description" content="Rauks.org est un jeu de rôles qui se veut à la fois accessible pour les joueurs débutants et adapté aux rolistes aguerris. Tout est fait pour rendre les règles faciles à apprendre et à utiliser afin de se concentrer sur l'essentiel : Le jeu de rôle en lui même.")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        link(rel="icon" type="image/png" href="favicon.png")
        link(rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css")
        link(rel="stylesheet" href="/css/rauks.css")
        script(src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js")
        script(src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js")
        script(type="text/javascript").
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-28391166-1']);
            _gaq.push(['_trackPageview']);
            (function() {
            var ga = document.createElement('script');
            ga.type = 'text/javascript';
            ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'stats.g.doubleclick.net/dc.js';
            var s = document.getElementsByTagName('script')[0];
            s.parentNode.insertBefore(ga, s);
            })();
    body
        div(data-role='page', data-theme='c')
            
            div(data-role="header", data-theme='c',data-position="fixed")
                div(data-role='controlgroup', data-type='horizontal', data-mini='true', style='text-align: center;')
                    a(href='/', data-role='button') Accueil
                    a(href='/about', data-role='button') Autour du jeu
                    a(href='/system', data-role='button') Système
                    a.ui-disabled(href='', data-role='button') Matériels
                    a.ui-disabled(href='', data-role='button') Univers
                    a.ui-disabled(href='', data-role='button') Scénarios
                    a.ui-disabled(href='', data-role='button') Boutique
            div(data-role='content')
                a(href='https://github.com/Tetraib/Rauks.org', target='_blank'): img(style='position: absolute; top: 40px; right: 0; border: 0;', src='https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png', alt='Fork me on GitHub')
                h1(style='font-size: 2.4em; text-align: center;margin:0 auto;margin-bottom:25px;')=title
                block content